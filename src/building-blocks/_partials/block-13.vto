{{ comp grid.Block { block, internal, draft, id, tag: 'li', classes: 'audiences' } }}

	<h3>Would you recommend?</h3>

	{{ comp.BigNumber({
		number: (calculated.survey.nps.all.value || 0),
		classes: 'big',
