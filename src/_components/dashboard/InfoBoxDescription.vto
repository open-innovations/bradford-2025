---
css: |
    .editable { position: relative;  }
    .editable:hover { outline: 2px dashed var(--color-black); outline-offset: 0.5rem; outline-color: var(--color-black); }
    .editable > *:last-child { margin-bottom: 0; }
    .edit-link { --flash-bg:var(--color-lightgrey); --flash-fg:var(--color-offblack); }
---
{{ if build.live == false }}
<div class="editable">
{{ /if }}
{{ description }}
{{ if build.live == false }}
	<p><a href="https://cms-bradford-2025.deno.dev/collection/{{ collection }}/edit/{{ file }}" class="edit-link">{{ comp Pill }}Edit description for this info box &rarr;{{ /comp }}</a></p>
</div>
{{ /if }}
